[flake8]
max-line-length = 127
exclude = 
    __pycache__,
    venv,
    .git,
    .vscode,
    *.egg-info,
    build,
    dist
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F401,  # imported but unused (comum em __init__.py)
max-complexity = 10
select = E,W,F
per-file-ignores =
    __init__.py:F401
